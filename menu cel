from clase_central import *
from main import *
from listaenlazada import *

#SE PUEDE REGISTRAR TELÉFONO? O SOLO SE PUEDE ACCEDER CON UNO EXISTENTE?

def ingresar():
    ingreso = False
    desbloqueado = False
    while not ingreso:
        celular = int(input("Ingrese su teléfono: "))
        if celular in Central.dispositivos_registrados:
            ingreso = True
    while not desbloqueado:
        if Central.dispositivos_registrados[celular].codigo == None:
            desbloqueado = True
        else:
            codigo = int(input("Ingrese su código: "))
            if codigo == Central.dispositivos_registrados[celular].codigo:
                desbloqueado = True
    #ACA FALTA PRENDER LA RED MOVIL CUANDO INGRESA
    menu()


def menu():
    print("Bienvenido a su celular!")
    print("Opciones: ")
    print("1. Teléfono")
    print("2. Contactos")
    print("3. SMS")
    print("4. E-Mail")
    print("5. App Store")
    print("6. Configuración")
    print("7. Apagar el celular")
    menu = int(input("Ingrese una opción: "))
    while menu <1 or menu>6:
        menu = int(input("Ingrese una opción: "))
    if menu == 1:
        telefono()
    elif menu == 2:
        contactos()
    elif menu == 3:
        sms()
    elif menu == 4:
        email()
    elif menu == 5:
        app_store()
    elif menu == 6:
        config()
    else:
        print(f'Apagando el celular')

