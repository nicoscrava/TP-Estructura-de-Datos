def email():
    print("Opciones: ")
    print("1. Ver Emails")
    print("2. Volver al inicio")
    mail = int(input("Ingrese una opción: "))
    while mail <1 or mail>2:
        mail = int(input("Ingrese una opción: "))
    if mail == 1:
        ver_por = int(input("Si desea ver los mails no leídos pulse 1, si quiere ver los mails por fecha pulse 2: "))
    while ver_por <1 or ver_por>2:
        ver_por = int(input("Si desea ver los mails no leídos pulse 1, si quiere ver los mails por fecha pulse 2: "))
    else:
        print("Volviendo al inicio")
    menu()

